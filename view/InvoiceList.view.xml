<mvc:View
	controllerName="shop.controller.InvoiceList"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:tnt="sap.tnt">
	<Table
		id="invoiceList"
		showUnread="true"
		width="auto"
		items="{invoice>/ProductCollection}">
		<headerToolbar>
			<OverflowToolbar>
				<SearchField width="50%" search=".onFilterInvoices"/>
					<Label text="Table:"/>

					<Switch state="true" customTextOn="On" customTextOff="Off" change=".onToggleSaveVisibility"/>

					<Button
						tooltip="Sort"
						icon="sap-icon://sort"
						press="handleSortButtonPressed"/>

					<Button
						tooltip="Filter"
						icon="sap-icon://filter"
						press="handleFilterButtonPressed"/>

					<Button
						tooltip="Group"
						icon="sap-icon://group-2"
						press="handleGroupButtonPressed"/>

					<!-- ?margin to end -->
					<Button
					id="BadgedButton"
					class="sapUiTinyMarginBeginEnd"
					icon="sap-icon://cart"
					text="Cart">
						<customData>
							<BadgeCustomData
								key="badge"
								value="1"
								visible="true"/>
						</customData>
					</Button>


			</OverflowToolbar>
		</headerToolbar>

		<infoToolbar>
			<OverflowToolbar id="vsdFilterBar" visible="false">
				<Text id="vsdFilterLabel" />
			</OverflowToolbar>
		</infoToolbar>

		<columns>
			<Column width="12em">
				<Text text="Photo" />
			</Column>
			<Column width="12em" >
				<Text text="Product" />
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<Text text="Supplier" />
			</Column>
			<Column minScreenWidth="Desktop" demandPopin="true">
				<Text text="Weight" />
			</Column>
			<Column minScreenWidth="Desktop" demandPopin="true">
				<Text text="Dimensions" />
			</Column>
			<Column minScreenWidth="Desktop" demandPopin="true">
				<Text text="Availability" />
			</Column>
			<Column>
				<Text text="Price" />
			</Column>
			<Column>
				<Text text="Add to cart" />
			</Column>
		</columns>

		<items>
			<ColumnListItem>
				<cells>
					<Image src="{invoice>ProductPicUrl}" width="60%"/>

					<ObjectIdentifier title="{invoice>Name}" text="{invoice>ProductId}" />

					<Text text="{invoice>SupplierName}" />

					<ObjectNumber
						inverted="true"
						number="{
							parts:[{path:'invoice>WeightMeasure'}, {path:'invoice>WeightUnit'}],
							formatOptions: {showMeasure: true}
						}"
						state="{
							parts:[
								{path: 'invoice>WeightMeasure'},
								{path: 'invoice>WeightUnit'}
							],
							formatter: 'shop.model.formatter.statusWeight'
						}"
						unit="{CurrencyCode}"
					/>

					<Text text="{invoice>Width} x {invoice>Depth} x {invoice>Height} {invoice>DimUnit}" />

					<tnt:InfoLabel
						text="{invoice>Status}"
						colorScheme= "{
							parts: [
								{path: 'invoice>Status'}
							],
							formatter: 'shop.model.formatter.statusText'
						}" />

					<ObjectNumber
						number="{
							parts:[{path:'invoice>Price'},{path:'invoice>CurrencyCode'}],
							type: 'sap.ui.model.type.Currency',
							formatOptions: {showMeasure: false}
						}"
						state="{
							parts:[
								{path: 'invoice>Price'}
							],
							formatter: 'shop.model.formatter.statusPrice'
						}"
						unit="{invoice>CurrencyCode}" />

					<!-- !Problem with StepInput -->
					<!-- <FlexBox direction="Column"> -->
					<!-- <StepInput
						id="CurrentValue"
						value="0"
						width="130px"/> -->
					<Button
						id="ToCartButton"
						class="sapUiTinyMarginBeginEnd"
						icon="sap-icon://cart"
						type="Default"
						text="Add to cart"
						press="addToCart"/>
					<!-- </FlexBox> -->

				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>